}

<div class="game-details-container">
    <!-- Oyun BaÅŸlÄ±ÄŸÄ± ve Temel Bilgiler -->
    <div class="game-header">
        <div class="game-main-content">
            <!-- Sol: Video -->
            <div class="game-video-section">
                @if (Model.Game.Videos != null && Model.Game.Videos.Count > 0)
