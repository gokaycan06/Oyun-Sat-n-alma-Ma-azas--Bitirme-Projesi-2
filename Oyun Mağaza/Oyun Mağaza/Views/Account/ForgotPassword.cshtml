@{
    ViewData["Title"] = "Şifremi Unuttum - EGCGP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/forgot-password.css" />
</head>
<body>
    <div class="background-slideshow">
        <div class="slide"></div>
        <div class="slide"></div>
        <div class="slide"></div>
    </div>

    <div class="forgot-password-container">
        <div class="forgot-password-box">
            <div class="logo-section">
                <h1>EGCGP</h1>
                <p class="subtitle">Şifre Sıfırlama</p>
            </div>

            <div class="info-text mb-4">
                E-posta adresinizi girin. Size şifre sıfırlama bağlantısı göndereceğiz.
            </div>

            <form method="post" asp-action="ForgotPassword" asp-controller="Account">
                <div class="form-group">
                    <input type="email" class="form-control" name="Email" placeholder="E-posta Adresi" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sıfırlama Bağlantısı Gönder</button>
                <div class="links mt-3">
                    <a href="/Account/Login">Giriş Yap</a>
                    <span class="separator">|</span>
                    <a href="/Account/Register">Hesap Oluştur</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 